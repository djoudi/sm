<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//Sun Microsystems, Inc.//DTD Application Server 9.0 Resource Definitions //EN"
    "http://www.sun.com/software/appserver/dtds/sun-resources_1_3.dtd">
<resources>
    <jdbc-connection-pool
        name="smPool"
        datasource-classname="org.postgresql.jdbc3.Jdbc3ConnectionPool"
        res-type="javax.sql.DataSource">
        <property name="database" value="jdbc:postgresql://127.0.0.1:5432/smdb"/> <!-- HSQLDB uses database instead of url -->
        <property name="url" value="jdbc:postgresql://127.0.0.1:5432/smdb"/>
        <property name="user" value="sm"/>
        <property name="password" value="sm"/> <!-- Use the value "()" for an empty password -->
    </jdbc-connection-pool>
    <jdbc-resource
        jndi-name="smDatasource"
        pool-name="smPool"
        enabled="true"
        object-type="user"/>
</resources>
